<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/bgatas"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/green">
    </LinearLayout>
    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="400dp">
        </LinearLayout>
    </eightbitlab.com.blurview.BlurView>

    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="320dp"
        android:layout_height="510dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/shape_shadow">

        <androidx.cardview.widget.CardView
            android:id="@+id/lineethumb"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:elevation="0dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToOutline="true"
                android:src="@drawable/nanya" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lineethumb"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:text="Sunflower"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/song_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/song"
            android:layout_centerInParent="true"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins"
            android:text="Sunflower"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:textStyle="italic" />

        <LinearLayout
            android:id="@+id/content_controls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/song_details"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_shufle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/shufle" />

            <ImageButton
                android:id="@+id/btn_prev"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/previous" />

            <ImageButton
                android:id="@+id/btn_play"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@null"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:scaleType="fitCenter"
                android:src="@drawable/play" />

            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/next" />

            <ImageButton
                android:id="@+id/btn_repeat"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/repeat" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_controls"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            android:maxHeight="3sp"
            android:progress="0"
            android:progressDrawable="@drawable/seekbar_progress_style"
            android:splitTrack="false"
            android:thumb="@drawable/thumb"
            android:thumbOffset="0dp" />
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/seekbar">
            <TextView
                android:id="@+id/starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="0:00"
                android:textColor="@android:color/white"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="3:00"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                android:textSize="10dp" />
        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        app:srcCompat="@android:drawable/ic_dialog_email" />

</FrameLayout>